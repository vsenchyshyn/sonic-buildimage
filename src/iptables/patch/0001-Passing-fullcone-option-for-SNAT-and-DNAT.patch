@@ -104,6 +112,9 @@ static void MASQUERADE_parse(struct xt_option_call *cb)
 	case O_RANDOM_FULLY:
 		mr->range[0].flags |=  NF_NAT_RANGE_PROTO_RANDOM_FULLY;
 		break;
